<UserControl x:Class="CI.GUI.Support.WpfLibrary.Views.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CI.GUI.Support.WpfLibrary.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
  <UserControl.Resources>
    <!--
    <ResourceDictionary Source="/AAV.OLP.UI.Common;component/Resources\Common.xaml" />
    <ResourceDictionary >
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>-->
  </UserControl.Resources>
  <Grid>
    <Rectangle Fill="{Binding  ElementName=uc,	Path=BackGround,	FallbackValue=#800}" />
    <Rectangle Fill="{Binding  ElementName=uc,	Path=ForeGround,	FallbackValue=#FF0079C2}" 
							 Width="{Binding ElementName=uc,	Path=Progress,		FallbackValue=30, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />
  </Grid>
</UserControl>
