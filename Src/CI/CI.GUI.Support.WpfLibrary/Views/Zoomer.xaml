<UserControl x:Class="CI.GUI.Support.WpfLibrary.Views.Zoomer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xui="clr-namespace:CI.GUI.Support.WpfLibrary.Views"
             xmlns:cnv="clr-namespace:CI.GUI.Support.WpfLibrary.Views"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="75">
  <Grid Margin="2" Width="75" Height="26" >
    <xui:ProgressBar x:Name="ZoomPrgBar" Minimum="{Binding ElementName=ZoomSlider, Path=Minimum}" Maximum="{Binding ElementName=ZoomSlider, Path=Maximum}" PBValue="{Binding ElementName=ZoomSlider, Path=Value}" Cursor="Hand" ToolTip="Adjust zoom. &#10;Double Click - back to 100%" IsTabStop="False" Opacity=".5" />
    <TextBlock		Text="{Binding ElementName=ZoomSlider, Path=Value, StringFormat='{}{0:N0} %', Converter={cnv:Multy100}}"	HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#fff" FontSize="16"/>
    <Slider				Orientation="Horizontal"	x:Name="ZoomSlider"	Minimum="0.1" Maximum="3" Value="{Binding ZmValue}" Cursor="Hand" ToolTip="Zoom. &#10;&#10;Use mouse wheel to adjust ...&#10;&#10; ... or Double Click to go back to 100% " IsTabStop="False" Opacity="0" />
  </Grid>
</UserControl>
