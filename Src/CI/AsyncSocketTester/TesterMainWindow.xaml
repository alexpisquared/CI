<Window x:Class="AsyncSocketTester.TesterMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncSocketTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="571*"/>
      <ColumnDefinition Width="571*"/>
      <ColumnDefinition Width="229*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="163*"/>
      <RowDefinition Height="267*"/>
    </Grid.RowDefinitions>

    <Viewbox></Viewbox>
    <CheckBox Content="Server" Grid.Column="2" HorizontalAlignment="Left" Margin="34,49,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
    
    <TextBlock Grid.Column="2" Margin="5" Grid.Row="1" Text="TextBlock" TextWrapping="Wrap" />

    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <Button Content="Button" Click="Button_Click" />
      <Button Content="Button" Click="Button_Click_1" />
      <Button Content="Button" Click="Button_Click_2" />
    </StackPanel>

  </Grid>
</Window>
