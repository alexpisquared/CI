  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="571*"/>
      <ColumnDefinition Width="571*"/>
      <ColumnDefinition Width="229*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="163*"/>
      <RowDefinition Height="267*"/>
    </Grid.RowDefinitions>

    <Viewbox></Viewbox>
    <CheckBox Content="Server" Grid.Column="2" HorizontalAlignment="Left" Margin="34,49,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>

    <TextBlock Grid.Column="2" Margin="5" Grid.Row="1" d:Text="result of server activities - line 1 - line 1 - line 1 - line 1 - line 1" TextWrapping="Wrap" />

    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <Button Content="Button" Click="Button_Click" />
      <Button Content="Button" Click="Button_Click_1" />
      <Button Content="Button" Click="Button_Click_2" />
