<UserControl x:Class="CI.Standard.Lib.Views.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CI.Standard.Lib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
  <UserControl.Resources>
  </UserControl.Resources>
  <Grid>
    <Rectangle Fill="#444" />
    <Rectangle Fill="#777" Width="{Binding ElementName=uc,	Path=Progress,		FallbackValue=30, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" />
  </Grid>
</UserControl>
