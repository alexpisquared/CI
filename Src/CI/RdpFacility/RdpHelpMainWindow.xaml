<Window x:Class="RdpFacility.RdpHelpMainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        Title="RDP Support" Height="150" Width="320" Loaded="onLoaded" Background="#8ce">

  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="15 5" />
      <Setter Property="Background"  Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
  </Window.Resources>

  <Viewbox Margin="0 0 0 0">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock Margin="10" x:Name="tbkBig"      Text="Since ..."    HorizontalAlignment="Center" />
      <TextBlock Margin="10" x:Name="tbkLog"      Text="Log"          HorizontalAlignment="Center" FontSize="1" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
        <CheckBox  Margin="10" x:Name="checkBox" Content="_Insomniac" Checked="onStrt" Unchecked="onStop" />
        <Button   Content="_Mark" Click="onMark" IsDefault="True" />
        <Button   Content="_X"    Click="onExit"  IsCancel="True" />
      </StackPanel>
    </StackPanel>
  </Viewbox>
</Window>