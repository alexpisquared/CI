<Window x:Class="RdpFacility.RdpHelpMainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        Title="RDP Support" Height="150" Width="320" Loaded="onLoaded" Background="#6ac">

  <Window.Resources>
    <Style TargetType="TextBlock">
      <Setter Property="Margin" Value="5" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="5" />
      <Setter Property="Background"  Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
  </Window.Resources>

  <Viewbox Margin="0 0 0 0">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock x:Name="tbkBig"      Text="Big" HorizontalAlignment="Center" Foreground="#00e" />
      <TextBlock x:Name="tbkMin"      Text="Min" HorizontalAlignment="Center" Foreground="#d40" />
      <TextBlock x:Name="tbkLog"      Text="Log" HorizontalAlignment="Center" Foreground="#070" FontSize="3" TextWrapping="Wrap" MaxWidth="500" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
        <CheckBox  Margin="10" x:Name="chkInso" Content="_Insomniac" Checked="onStrt" Unchecked="onStop" />
        <CheckBox  Margin="10" x:Name="chkAdbl" Content="_Audio"     Checked="onAuOn" Unchecked="onAuOf" />
        <Button   Content="_rSet" Click="onRset"  />
        <Button   Content="_Mark" Click="onMark" IsDefault="True" />
        <Button   Content="_X"    Click="onExit"  IsCancel="True" />
      </StackPanel>
    </StackPanel>
  </Viewbox>
</Window>