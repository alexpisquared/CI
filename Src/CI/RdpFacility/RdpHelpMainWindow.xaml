<Window x:Class="RdpFacility.RdpHelpMainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        Title="RDP Support" Height="150" Width="420" Loaded="onLoaded" Background="#246">

  <Window.Resources>
    <Style TargetType="CheckBox">
      <Setter Property="Margin" Value="5" />
      <Setter Property="Foreground" Value="#ff0" />
    </Style>
    <Style TargetType="TextBlock">
      <Setter Property="Margin" Value="5" />
      <Setter Property="Foreground" Value="#ff0" />
    </Style>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="5" />
      <Setter Property="Background"  Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
      <Setter Property="Foreground"  Value="#ff0" />
    </Style>
  </Window.Resources>

  <Viewbox Margin="5">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock x:Name="tbkBig"      Text="Big" HorizontalAlignment="Center" Foreground="#08e" />
      <TextBlock x:Name="tbkMin"      Text="Min" HorizontalAlignment="Center" Foreground="#d60" />
      <TextBlock x:Name="tbkLog"      Text="Log" HorizontalAlignment="Center" Foreground="#0a0" FontSize="3" TextWrapping="Wrap" MaxWidth="500" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
        <CheckBox  x:Name="chkAdbl" Content="_Audio" Checked="onAuOn" Unchecked="onAuOn" />
        <CheckBox  x:Name="chkPosn" Content="_Dance" Checked="onDaOn" Unchecked="onDaOn" />
        <CheckBox  x:Name="chkInso" Content="_Insom" Checked="onStrt" Unchecked="onStrt" />
        <Button   Content="_Rset" Click="onRset"  />
        <Button   Content="_Mark" Click="onMark" IsDefault="True" />
        <Button   Content="  x  " Click="onExit"  IsCancel="True" />
      </StackPanel>
    </StackPanel>
  </Viewbox>
</Window>