<Window x:Class="RdpFacility.RdpHelpMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RdpFacility"
        mc:Ignorable="d"
        Title="RDP Support" Height="150" Width="320" Loaded="onLoaded" Background="#8ce">

  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Margin" Value="15 5" />
      <Setter Property="Background"  Value="Transparent" />
      <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
  </Window.Resources>

  <Viewbox Margin="0 0 0 0">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <CheckBox  Margin="10" x:Name="checkBox" Content="The Switch" HorizontalAlignment="Center" Checked="onStrt" Unchecked="onStop" />
      <TextBlock Margin="10" x:Name="tbkBig"      Text="Since ..."  HorizontalAlignment="Center" />
      <TextBlock Margin="10" x:Name="tbkLog"      Text="Log"        HorizontalAlignment="Center" FontSize="1" />
      <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
        <Button    x:Name="buttonStart"   Content="Start" Click="onStrt" Visibility="Collapsed" />
        <Button    x:Name="buttonStop"    Content="Stop"  Click="onStop" Visibility="Collapsed" />
        <Button    x:Name="buttonMove"    Content="Move"  Click="onMove" Visibility="Collapsed" />
        <Button                           Content="_Mark" Click="onMark" IsDefault="True" />
        <Button    x:Name="buttonExit"    Content="_X"    Click="onExit"  IsCancel="True" />
      </StackPanel>
    </StackPanel>
  </Viewbox>
</Window>