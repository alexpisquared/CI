<UserControl x:Class="RMSClient.Views.BrandTitleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RMSClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Image Width="45" Source="/RMSClient;component/favicon.ico" Margin="14 0">
      <Image.Effect>
        <DropShadowEffect ShadowDepth="0" BlurRadius="12" Color="#cde" Opacity=".4" />
      </Image.Effect>
    </Image>
    <TextBlock Text="RMS Client" FontSize="64" FontWeight="SemiBold" Foreground="#a00" Padding="0 0 0 8" Margin="0 -10" Grid.Column="1">
      <TextBlock.Effect>
        <DropShadowEffect ShadowDepth="2" BlurRadius="12" Color="#faa" Opacity=".4" />
      </TextBlock.Effect>
    </TextBlock>
  </Grid>
</UserControl>
