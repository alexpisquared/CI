<Window x:Class="CI.POC.App.A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CI.POC.App.A"
        mc:Ignorable="d"
        Title="CI.POC - Main Window" Height="450" Width="800">
  <Viewbox Margin="80" RenderTransformOrigin="0.5,0.5">
    <Viewbox.RenderTransform>
      <TransformGroup>
        <ScaleTransform/>
        <SkewTransform/>
        <RotateTransform Angle="-26.809"/>
        <TranslateTransform/>
      </TransformGroup>
    </Viewbox.RenderTransform>
    <StackPanel >
      <Button IsCancel="True" Click="onClose" Opacity="0"/>
      <TextBlock Text="An attempt to convince management to switch to the Microsoft App Store deployment" FontSize="7"/>
      <TextBlock Text="POC / Demo" FontSize="32" HorizontalAlignment="Center"/>
      <TextBlock Text="Actual content is TBD" HorizontalAlignment="Right"/>
    </StackPanel>

  </Viewbox>
</Window>
