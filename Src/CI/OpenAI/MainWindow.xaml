<Window x:Class="OpenAI.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:OpenAI"
        Title="Middleman" Height="450" Width="800" Loaded="Window_Loaded" Background="#222" Topmost="True">
  <Window.Resources>
    <Style TargetType="{x:Type Control}" x:Key="C">
      <Setter Property="Foreground" Value="#fff" />
      <Setter Property="IsTabStop"  Value="False" />
      <Setter Property="VerticalAlignment"  Value="Center" />
    </Style>
    <Style TargetType="{x:Type Label}"     BasedOn="{StaticResource C}" >
      <Setter Property="Foreground" Value="#888" />
    </Style>
    <Style TargetType="{x:Type Button}"     BasedOn="{StaticResource C}" >
      <Setter Property="Foreground" Value="#00f" />
    </Style>
    <Style TargetType="{x:Type TextBox}"    BasedOn="{StaticResource C}" >
      <Setter Property="Background" Value="#333" />
      <Setter Property="MinWidth"   Value="40" />
      <Setter Property="Margin"     Value="5" />
      <Setter Property="Padding"    Value="8 3" />
      <Setter Property="BorderThickness"    Value="0" />
    </Style>
    <Style TargetType="{x:Type TextBlock}"  >
      <Setter Property="VerticalAlignment" Value="Center" />
      <Setter Property="Foreground" Value="#ff0" />
      <!--<Setter Property="Background" Value="#444" />-->
    </Style>
    <!--
    -->

  </Window.Resources>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="4*"/>
    </Grid.RowDefinitions>

    <TextBlock x:Name="tbkStatus" Foreground="#08f" Text="State" HorizontalAlignment="Center" />

    <Button     Grid.Row="0" Margin="0" Content="X"    HorizontalAlignment="Right" Click="Close" IsCancel="True"/>
    <TextBox    Grid.Row="1" Margin="5" TextWrapping="Wrap" Text="Prompt" x:Name="tbxPrompt" VerticalAlignment="Stretch" IsTabStop="True" />
    <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
      <TextBox x:Name="tbkMod" Text="text-davinci-002" IsTabStop="True" />
      <TextBox x:Name="tbkMax" Text="1000" />
      <TextBox x:Name="tbkTem" Text="0.7" />
      <TextBox x:Name="tbkTop" Text="1" />
      <TextBox x:Name="tbkFre" Text="0" />
      <TextBox x:Name="tbkPre" Text="0" />
      <Button  Margin="5" Content="_Send" Click="Send" IsDefault="True" />
      <Label Content="    Took"/>
      <TextBlock x:Name="tbkTM" d:Text="TM" />
      <Label Content="s    Finish reason"/>
      <TextBlock x:Name="tbkFR" d:Text="FR" />
      <Label Content="    Len"/>
      <TextBlock x:Name="tbkLn" d:Text="Ln" />
      <Label Content="    Zz"/>
      <TextBlock x:Name="tbkZZ" d:Text="ZZ" />
    </StackPanel>
    <TextBlock  Grid.Row="3" Margin="5" TextWrapping="Wrap" Text="Answer" x:Name="tbkAnswer" VerticalAlignment="Stretch" />
    <Button     Grid.Row="3" Margin="7" Content="_Copy"    HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Copy" />

  </Grid>
</Window>
