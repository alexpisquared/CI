<Window x:Class="OpenAI.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:OpenAI"
        Title="Middleman" Height="450" Width="800" Loaded="Window_Loaded" Background="#222">
  <Window.Resources>
    <Style TargetType="{x:Type Control}" x:Key="C">
      <Setter Property="Foreground" Value="#fff" />
      <Setter Property="Background" Value="#444" />
    </Style>
    <Style TargetType="{x:Type Button}"     BasedOn="{StaticResource C}" />
    <Style TargetType="{x:Type TextBox}"    BasedOn="{StaticResource C}" />
    <Style TargetType="{x:Type TextBlock}"  BasedOn="{StaticResource C}" />

  </Window.Resources>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="4*"/>
    </Grid.RowDefinitions>

    <Button     Grid.Row="0" Margin="0" Content="X"    HorizontalAlignment="Right" Click="Close" IsCancel="True"/>
    <TextBox    Grid.Row="1" Margin="5" TextWrapping="Wrap" Text="Prompt" x:Name="tbxPrompt" />
    <StackPanel Grid.Row="2" Margin="5" Orientation="Horizontal" >
      <Button  Margin="5" Content="_Send" Click="Send" IsDefault="True" />
      <TextBlock x:Name="tbkTM" />
      <TextBlock x:Name="tbkFR" />
      <TextBlock x:Name="tbkLn" />
      <TextBlock x:Name="tbkZZ" />
    </StackPanel>
    <TextBox    Grid.Row="3" Margin="5" TextWrapping="Wrap" Text="Answer" x:Name="tbkAnswer" IsReadOnly="True" />
    <Button     Grid.Row="3" Margin="5" Content="_Copy"    HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Copy" />

  </Grid>
</Window>
